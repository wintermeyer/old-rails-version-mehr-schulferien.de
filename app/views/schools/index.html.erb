<% cache [I18n.locale, current_user, cache_key_for_all(School)] do %>
  <h1>Listing Schools</h1>

  <table class="pure-table pure-table-horizontal">
    <thead>
      <tr>
          <th>Name</th>
          <th>Address line1</th>
          <th>Address line2</th>
          <th>Street</th>
          <th>Zip code</th>
          <th>Address city name</th>
          <th>Email address</th>
          <th>Homepage url</th>
          <th>City</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
            <td><%= school.name %></td>
            <td><%= school.address_line1 %></td>
            <td><%= school.address_line2 %></td>
            <td><%= school.street %></td>
            <td><%= school.zip_code %></td>
            <td><%= school.address_city_name %></td>
            <td><%= school.email_address %></td>
            <td><%= school.homepage_url %></td>
            <td><%= school.city %></td>
            <td><%= link_to 'Show', school, class: policy(school).show? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Edit', edit_school_path(school), class: policy(school).edit? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' }, class: policy(school).destroy? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New School', new_school_path, class: policy(School.new).new? ? 'pure-button':'pure-button pure-button-disabled' %>
<% end %>
