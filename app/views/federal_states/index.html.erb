<h1>Listing Federal States</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Country</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @federal_states.each do |federal_state| %>
      <tr>
        <td><%= federal_state.country %></td>
        <td><%= federal_state.name %></td>
        <td><%= link_to 'Show', federal_state, class: policy(federal_state).show? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        <td><%= link_to 'Edit', edit_federal_state_path(federal_state), class: policy(federal_state).edit? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        <td><%= link_to 'Destroy', federal_state, method: :delete, data: { confirm: 'Are you sure?' }, class: policy(federal_state).destroy? ? 'pure-button':'pure-button pure-button-disabled' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Federal state', new_federal_state_path, class: policy(FederalState.new).new? ? 'pure-button':'pure-button pure-button-disabled' %>
