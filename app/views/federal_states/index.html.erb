<h1>Listing Federal States</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Country</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @federal_states.each do |federal_state| %>
      <tr>
        <td><%= federal_state.country %></td>
        <td><%= federal_state.name %></td>
        <td><%= link_to 'Show', federal_state, class: 'pure-button' %></td>
        <td><%= link_to 'Edit', edit_federal_state_path(federal_state) , class: 'pure-button' %></td>
        <td><%= link_to 'Destroy', federal_state, method: :delete, data: { confirm: 'Are you sure?' } , class: 'pure-button'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Federal state', new_federal_state_path %>
