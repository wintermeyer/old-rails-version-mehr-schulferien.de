<% cache [I18n.locale, current_user, cache_key_for_all(City)] do %>
  <h1>Listing Cities</h1>

  <table class="pure-table pure-table-horizontal">
    <thead>
      <tr>
          <th>Name</th>
          <th>Zip code</th>
          <th>Federal state</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cities.each do |city| %>
        <tr>
            <td><%= city.name %></td>
            <td><%= city.zip_code %></td>
            <td><%= city.federal_state %></td>
            <td><%= link_to 'Show', city, class: policy(city).show? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Edit', edit_city_path(city), class: policy(city).edit? ? 'pure-button':'pure-button pure-button-disabled' %></td>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: policy(city).destroy? ? 'pure-button':'pure-button pure-button-disabled' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New City', new_city_path, class: policy(City.new).new? ? 'pure-button':'pure-button pure-button-disabled' %>
<% end %>
